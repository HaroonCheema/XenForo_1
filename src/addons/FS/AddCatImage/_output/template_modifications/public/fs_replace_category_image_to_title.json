{
    "template": "xfrm_category_list_macros",
    "description": "Replace Title to image",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "{$category.title}",
    "replace": "<xf:if is=\"$xf.options.fs_enable_image\">\n<xf:if is=\"$category.isImage()\">\n\t\t\t\t\t\t<xf:inforow rowtype=\"confirm\">\n\t\t\t\t\t\t\t<img src=\"{$category.getImgUrl(true)}\" style=\"max-width:40%\">\n\t\t\t\t\t\t</xf:inforow>\n\t<xf:else/>\n\t$0\n\t\t\t\t\t</xf:if>\n\t<xf:else/>\n\t$0\n\t</xf:if>"
}